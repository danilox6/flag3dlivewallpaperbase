<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devxperiments.flaglivewallpaper"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="8" />

    <application
        android:icon="@drawable/sys_ic_launcher"
        android:label="@string/app_name" >
        <service
            android:name=".FlagWallpaperService"
            android:permission="android.permission.BIND_WALLPAPER" >
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>

            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/myglwallpaper" />
        </service>

        <activity
            android:name=".settings.Settings"
            android:exported="true"
            android:label="Setting" >
        </activity>
        <activity
            android:name=".settings.WallpaperChooser"
            android:label="@string/strSelectPic"
            android:theme="@android:style/Theme.Light" >
        </activity>
        <activity
            android:name=".settings.MultipleWallpaperChooser"
            android:label="@string/strSelectPic"
            android:theme="@android:style/Theme.Light" >
        </activity>
        <activity
            android:name=".settings.CreditsActivity"
            android:label="@string/strCredits"
            android:theme="@android:style/Theme.Light" >
        </activity>
        <activity
            android:name=".settings.FeedbackActivity"
            android:label="Feedback"
            android:theme="@android:style/Theme.Light" >
        </activity>
        <activity
            android:name="com.droid4you.util.cropimage.CropImage"
            android:configChanges="orientation|keyboardHidden"
            android:label="CropLabel" >
        </activity>
          <receiver android:name=".DayTimeAlarmManager"></receiver>
    </application>

</manifest>